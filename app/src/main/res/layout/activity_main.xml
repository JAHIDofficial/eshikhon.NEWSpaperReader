<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="20dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bangladesh Newspaper"
                android:textColor="#000"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:onClick="jugantor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="JUGANTOR"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <Button
                        android:onClick="prothomalo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="PROTHOM ALO"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <Button
                        android:onClick="ittefaq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="ITTEFAQ"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <Button
                        android:onClick="kalerkontho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="KALER KONTHO"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <Button
                        android:onClick="samakal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="SOMOKAL"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />


                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Online Newspaper"
                android:textColor="#000"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:onClick="bdnews24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="BD News 24"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <Button
                        android:onClick="jagonews24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="Jago News 24"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <Button
                        android:onClick="bd24live"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="Bd24live"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <Button
                        android:onClick="dailybangladesh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="Daily Bangladesh"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <Button
                        android:onClick="banglatribune"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="Bangla Tribune"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />


                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Local Newspaper"
                android:textColor="#000"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:onClick="dailyazadi"
                        android:padding="10dp"
                        android:text="Daily Azadi"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <Button
                        android:onClick="dailypurbokone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="Daily Purbokone"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <Button
                        android:onClick="dailypurbanchal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="Daily Purbanchal"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <Button
                        android:onClick="surmatimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="Surma Times"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <Button
                        android:onClick="dailycoxsbazar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="Daily Coxsbazar"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />


                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="International Newspaper"
                android:textColor="#000"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:onClick="dailystar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="Dailystar"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <Button
                        android:onClick="independent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="Independent"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <Button
                        android:onClick="bangladeshtoday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="Bangladesh Today"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sports Newspaper"
                android:textColor="#000"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:onClick="sport360"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#ddd"
                        android:padding="10dp"
                        android:text="Sport 360"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>